<UserControl
    x:Class="ExaminationProgram.Wizard.WizardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:beh="clr-namespace:ExaminationProgram.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:ExaminationProgram.Wizard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:SetupWizard}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource ModuleLayout}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ControlTemplate x:Key="ExecutedWizardStep">
            <StackPanel Margin="5" Orientation="Horizontal">
                <Rectangle
                    Name="IconName"
                    Width="21"
                    Height="21"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    Fill="{DynamicResource AccentColorBrush}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Uniform" />
                    </Rectangle.OpacityMask>
                    <i:Interaction.Behaviors>
                        <beh:IconBehaviour IconName="{Binding IconName}" />
                    </i:Interaction.Behaviors>
                </Rectangle>
                <TextBlock
                    x:Name="stName"
                    FontSize="15"
                    Text="{Binding Name}" />
            </StackPanel>
        </ControlTemplate>
        <ControlTemplate x:Key="WizardStepGroup" />
    </UserControl.Resources>
    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>
        <ListBox
            x:Name="MainList"
            Grid.RowSpan="2"
            Margin="5"
            HorizontalContentAlignment="Center"
            ItemsSource="{Binding WizardSteps}"
            SelectedItem="{Binding SelectedStep}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <Border
                                    Margin="5"
                                    Background="White"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="4"
                                            Direction="225"
                                            Opacity="0.5"
                                            ShadowDepth="3"
                                            Color="Gray" />
                                    </Border.Effect>

                                    <StackPanel Margin="5" Orientation="Horizontal">
                                        <ListBox x:Name="StepsList" ItemsSource="{Binding}">
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate>
                                                                <ContentControl Content="{Binding}">
                                                                    <ContentControl.Resources>
                                                                        <DataTemplate>
                                                                            <ContentControl Template="{StaticResource ExecutedWizardStep}" />
                                                                        </DataTemplate>
                                                                        <DataTemplate>
                                                                            <ContentControl Template="{StaticResource WizardStepGroup}" />
                                                                        </DataTemplate>
                                                                    </ContentControl.Resources>
                                                                </ContentControl>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                        </ListBox>
                                        <Rectangle
                                            Name="IconName"
                                            Width="21"
                                            Height="21"
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            Fill="{DynamicResource AccentColorBrush}">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Stretch="Uniform" />
                                            </Rectangle.OpacityMask>
                                            <i:Interaction.Behaviors>
                                                <beh:IconBehaviour IconName="{Binding IconName}" />
                                            </i:Interaction.Behaviors>
                                        </Rectangle>
                                        <TextBlock
                                            x:Name="stName"
                                            FontSize="15"
                                            Text="{Binding Name}" />
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="ListBox.SelectedItem" Value="True">
                                        <Setter TargetName="stName" Property="Foreground" Value="{DynamicResource AccentColorBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>

                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Width="130"
            Height="30"
            Margin="30,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="{DynamicResource AccentColorBrush}"
            BorderBrush="Black"
            BorderThickness="1.25"
            Command="{Binding PreviousStepCommand}"
            Content="Предыдущий шаг"
            FontSize="11" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Width="130"
            Height="30"
            Margin="5,0,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Background="{DynamicResource AccentColorBrush}"
            BorderBrush="Black"
            BorderThickness="1.25"
            Command="{Binding NextStepCommand}"
            Content="Cледующий шаг"
            FontSize="11" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Width="130"
            Height="30"
            Margin="40,0,10,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{DynamicResource AccentColorBrush}"
            BorderBrush="Black"
            BorderThickness="1.25"
            Content="Сбросить шаги"
            FontSize="11" />
        <Grid Grid.Column="1" Margin="5">

            <TextBlock
                x:Name="StepName"
                MinWidth="50"
                MinHeight="25"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="16"
                Text="{Binding SelectedStep.Name}" />

            <TextBlock
                x:Name="StepDesctiption"
                MinWidth="150"
                MinHeight="30"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="14"
                Text="{Binding SelectedStep.Description}"
                TextWrapping="Wrap" />

            <TextBlock
                x:Name="StepError"
                MinWidth="150"
                MinHeight="25"
                Margin="10,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                FontSize="14"
                Text="{Binding SelectedStep.IsError}" />
        </Grid>
    </Grid>
</UserControl>
